inhOrTrunc : U -> N -> U
inhOrTrunc A = split
  zero  -> A
  suc n -> (x y : A) -> inhOrTrunc (Id A x y) n

truncFibOmega : (B : ptType) (P : B.1 -> U) (f : P (pt B)) (n : N) ->
  inhOrTrunc (P (pt B)) (suc n) ->
  (p : (Omega B).1) -> inhOrTrunc (fibOmega B P f p) n
truncFibOmega B P f n tr p = substInv U (\X -> inhOrTrunc X n)
  (IdS B.1 P (pt B) (pt B) p f f) (Id (P (pt B)) (subst B.1 P (pt B) (pt B) p f) f)
  (eqSubstSig B.1 P (pt B) (pt B) p f f) (tr (subst B.1 P (pt B) (pt B) p f) f)
